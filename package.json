{
  "name": "@headspace/react-gif",
  "version": "1.0.0",
  "description": "A gif player that renders a single canvas element",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest -u --collectCoverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeadspaceMeditation/react-gif.git"
  },
  "keywords": [
    "gif",
    "player",
    "canvas",
    "animations",
    "react",
    "giphy"
  ],
  "author": "Jacob Lowe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HeadspaceMeditation/react-gif/issues"
  },
  "homepage": "https://github.com/HeadspaceMeditation/react-gif#readme",
  "peerDependencies": {
    "react": "^16.5.2"
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^22.1.4",
    "@types/node": "^9.4.6",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.4",
    "@types/react-test-renderer": "^16.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^22.4.2",
    "prettier": "^1.11.0",
    "react": "^16.4.1",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.4.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.9.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "prettier --write --single-quote  --trailing-comma all",
        "git add"
      ]
    }
  },
  "files": [
    "dist/"
  ],
  "jest": {
    "transform": {
      "\\.(jsx?|tsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "dist"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(svg)$": "<rootDir>/empty-module.js"
    },
    "setupFiles": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
